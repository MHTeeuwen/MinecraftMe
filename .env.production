# Server Configuration
PORT=3001
NODE_ENV=production

# API URLs (replace with your actual production domain)
CLIENT_URL=https://minecraftme.vercel.app
API_URL=https://api.minecraftme.vercel.app

# OpenAI Configuration (replace with your actual key in the deployment platform)
OPENAI_API_KEY=your_openai_api_key_here

# Stripe Configuration (replace with live keys before deployment)
STRIPE_SECRET_KEY=sk_live_your_live_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_key_here

# Rate Limiting (stricter for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=30

# File Upload
MAX_FILE_SIZE=5242880 # 5MB in bytes

# Security
CORS_ORIGIN=https://minecraftme.vercel.app

# Logging
LOG_LEVEL=info

# Node Environment Security
NODE_OPTIONS='--max-old-space-size=512' 